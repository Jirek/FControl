@model FControl.Models.Transaccion
@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>
<h3>Deseas eliminar esta transaccion!!!</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">


        <dt>
            <label>Importe: </label>
            @Html.DisplayFor(model => model.Importe)
        </dt>

        
        <dt>
            <label>Concepto: </label>
            @Html.DisplayFor(model => model.Concepto)
        </dt>
        <dt>
            <label>Fecha: </label>
            @Html.DisplayFor(model => model.FechaTransaccion)
        </dt>
        <dt>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-sx btn-danger" />
            <a href='@Url.Action("Index","Transaccion")' class="btn  btn-sm btn-info"><span class="glyphicon glyphicon-backward"></span> Regresar</a>

        </div>
    }
</div>
